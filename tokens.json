{
  "designSystem": {
    "style": {
      "name": "Dark Elegant Minimal",
      "description": "Design escuro, sofisticado, com tipografia serifada para títulos e sans-serif para textos. Foco em contraste, elegância e harmonia visual.",
      "theme": {
        "mode": "dark",
        "primaryColor": "#E7D9C4",
        "secondaryColor": "#ADA18F",
        "accentColor": "#C1B08E",
        "backgroundColor": "#0E0E0E",
        "surfaceColor": "#1A1A1A",
        "borderColor": "#2A2A2A",
        "highlightColor": "#FFEDD5",
        "hoverOverlay": "rgba(255, 255, 255, 0.05)"
      },
      "typography": {
        "headingFont": "'Playfair Display', serif",
        "bodyFont": "'Inter', sans-serif",
        "fontSizes": {
          "h1": "3rem",
          "h2": "2.25rem",
          "h3": "1.75rem",
          "body": "1rem",
          "caption": "0.875rem"
        },
        "fontWeights": {
          "regular": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "lineHeights": {
          "tight": 1.2,
          "normal": 1.5,
          "relaxed": 1.75
        },
        "letterSpacing": {
          "tight": "-0.5px",
          "normal": "0px",
          "wide": "0.5px"
        }
      },
      "effects": {
        "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.5)",
        "borderRadius": "12px",
        "imageHoverScale": "scale(1.02)"
      },
      "animations": {
        "fadeIn": {
          "type": "opacity",
          "duration": "400ms",
          "easing": "ease-in-out"
        },
        "hoverLift": {
          "type": "transform",
          "transform": "translateY(-4px)",
          "duration": "200ms",
          "easing": "ease-out"
        }
      }
    },
    "layout": {
      "grid": {
        "columns": 12,
        "gutter": "24px",
        "padding": {
          "mobile": "16px",
          "desktop": "64px"
        }
      },
      "sections": [
        {
          "id": "hero",
          "height": "100vh",
          "contentAlignment": "center",
          "elements": ["heading", "subheading", "avatar", "cta-button"]
        },
        {
          "id": "services",
          "columns": 3,
          "cards": {
            "titleSize": "h3",
            "textSize": "body",
            "hoverEffect": "hoverLift"
          }
        },
        {
          "id": "portfolio",
          "heading": "Selected Work",
          "grid": {
            "columns": 2,
            "gap": "32px"
          },
          "card": {
            "imageOverlay": true,
            "captionStyle": "uppercase",
            "hover": "imageHoverScale"
          }
        }
      ]
    },
    "components": {
      "button": {
        "variant": "outline",
        "textTransform": "uppercase",
        "border": "1px solid #E7D9C4",
        "padding": "12px 24px",
        "fontWeight": "500",
        "hover": {
          "background": "#E7D9C4",
          "color": "#0E0E0E"
        }
      },
      "card": {
        "background": "#1A1A1A",
        "borderRadius": "12px",
        "padding": "24px",
        "shadow": true,
        "hoverShadow": true
      },
      "navbar": {
        "background": "transparent",
        "height": "80px",
        "position": "fixed",
        "textColor": "#E7D9C4",
        "hoverColor": "#FFFFFF"
      }
    },
    "assets": {
      "logo": {
        "position": "top-left",
        "size": "32px"
      },
      "avatar": {
        "style": "dramatic lighting, cropped top",
        "position": "centered",
        "effect": "darken-blend"
      },
      "icons": {
        "style": "minimal outline",
        "color": "#ADA18F"
      }
    }
  }
}
